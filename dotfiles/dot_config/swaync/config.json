{
  "$schema": "/run/current-system/sw/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-width": 400,
  "timeout": 10,
  "widgets": [
    "mpris",
    "dnd",
    "backlight",
    "volume",
    "notifications"
  ],
  "widget-config": {
    "mpris": {
      "autohide": true
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label#sep1": {
      "text": " "
    },
    "backlight": {
      "label": "Brightness",
      "device": "gmux_backlight"
    },
    "volume": {
      "label": "Audio",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": false
    },
    "notifications": {
      "vexpand": true,
      "hexpand": true
    }
  }
}

